{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./",
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "target": "es2021"
  },
  "exclude": [".parcel-cache", "dist", "node_modules"],
  "include": ["scripts/**/*", "shared/**/*", "src/**/*", "tests/**/*"],
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  }
}
